{
  "type": "mongodb",
  "host": "localhost",
  "database": "attendance",
  "synchronize": true,
  "logging": false,
  "useUnifiedTopology": true,
  "entities": [
    "src/entity/*.js"
  ],
  "subscribers": [
    "src/subscriber/*.js"
  ],
  "migrations": [
    "src/migration/*.js"
  ],
  "cli": {
    "entitiesDir": "src/entity",
    "migrationsDir": "src/migration",
    "subscribersDir": "src/subscriber"
  }
}